	<section>
		
		<div class="form-body">
		<div class="wrapper">
			<div class="title-text">
				<div class="title login">Login Form</div>
				<div class="title signup">Signup Form</div>
			</div>

			<!-- Start Form Container -->
			<div class="form-container">
				<div class="slide-controls">
					<input type="radio" name="slider" id="login" style="visibility: hidden;" checked>
					<input type="radio" name="slider" id="signup" style="visibility: hidden;" >
					<label for="login" class="slide login">Login</label>
					<label for="signup" class="slide signup"> Signup</label>
					<div class="slide-tab"></div>
				</div>

				<div class="form-inner">

					<!-- Start Login Form -->
					<form action="/auth/login" class="login" method="post">
						<div class="field">
							<input type="text" placeholder="UserName" name="username" required>
						</div>
						<div class="field">
							<input type="password" placeholder="Password" name="password" required>
						</div>
						<div class="pass-link">
							<a href="#">
								Forgot password?
							</a>
						</div>
						<div class="field">
							<input type="submit" value="Login">
						</div>
						<div class="field">
							<a class="btn btn-primary btn-block mb-4" href="/auth/google">Continue with Google</a>
						</div>
						<div class="signup-link">
							Not a member? <a href="#">Signup now</a>
						</div>
					</form>

					<!-- Start Signup Form -->
					<form action="/register" class="signup" method="post">
						<div class="field">
							<input type="text" placeholder="First Name" name="firstname" required>
						</div>
						<div class="field">
							<input type="text" placeholder="Last Name" name="lastname" required>
						</div>
						<div class="field">
							<input type="text" placeholder="Username" name="username" required>
						</div>
						<div class="field">
							<input type="text" placeholder="Email Address" name="email" required>
						</div>
						<div class="field">
							<input type="password" placeholder="Password" name="password" id="myPassword" required>
						</div>
						<div class="field">
							<input type="password" placeholder="Confirm password" name="confirmpassword" id="myPasswordC" required>
						</div>
						
						<div class="field">
							<input class="btn" value="Signup" id="signup-button" readonly>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
	</section>
	
	<script>
		document.getElementById("myPasswordC").addEventListener("keyup", () => {
			let pass = document.getElementById("myPassword").value;
			let passC = document.getElementById("myPasswordC").value;
			console.log(pass, passC);
			if(pass === passC){
				document.getElementById("signup-button").type = "submit";
			}
			else{
				document.getElementById("signup-button").type = "button";
			}
		})
		document.getElementById("signup-button").addEventListener("click", () => {
			if(document.getElementById("signup-button").type === "button") alert("Password not Matched");
		})
	</script>

