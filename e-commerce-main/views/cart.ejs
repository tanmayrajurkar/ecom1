<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="../assets/css/style.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
        integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ=="
        crossorigin="anonymous" />

    <title>E-Commerce</title>
</head>

<body id="top">

    <section class="header_menu" id="header_menu">
        <div class="container-fluid px-0 shadow">
            <nav class="navbar navbar-expand-lg navbar-light bg-light py-3  ">
                <a class="navbar-brand pl-5" href="javascript:;">
                    <img src="../assets/images/logo.png" class="img img-fluid" width="120px" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/product?category=smartphones">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/product/category">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact Us</a>
                        </li>


                    </ul>
                    <div class="search mr-3">
                        <% if ( (typeof user !== 'undefined') && !("message" in user) ) { %>
                            <a href="/logout">
                                <span class="btn btn-sm btn-outline-primary">Logout</span>
                              </a>
                          <button class="btn btn-sm btn-outline-primary"><%= user.DisplayName %></button>
                        <% } else {%>
                            <a href="/login" class="btn btn-sm btn-outline-primary">
                            Sign in
                            </a>
                        <% } %>
                      </div>
                      <div class="cart">
                        <% if ( (typeof user !== 'undefined') && !("message" in user) ) { %>
                          <a href="/cart/items">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                            <span class="badge badge-pill badge-primary">24</span>
                          </a>
                        <% } %>
                      </div>
                </div>
            </nav>
        </div>
    </section>

    <section class="cart py-5 my-5" id="cart">
        <div class="container ">
            <div class="section_title text-center mb-5">
                <h1 class="text-capitalize">Cart</h1>
            </div>
            <div class="row bg_cart_1 rounded">

                <div class="col-md-8 border-right">

                    <div class="mb-3">
                        <div class="pt-4">
                            <% if (CartItems === null) { %>
                                <h5 class="mb-4">Cart is Empty</h5>
                            <% } else if (CartItems.lenght === 0) { %>
                                <h5 class="mb-4">Cart is Empty</h5>
                            <% } else {%>
                                <h5 class="mb-4">Cart (<span><%= CartItems.length %></span> items)</h5>
                                <% CartItems.forEach(element => { %>
                            
                                    <div class="row mb-4">
                                        <div class="col-md-5 col-lg-3 col-xl-3">
                                            <div class="rounded mb-3 mb-md-0">
                                                <img class="img-fluid w-100 rounded" src="<%= element.thumbnail %>"
                                                    alt="Sample">
                                            </div>
                                        </div>
                                        <div class="col-md-7 col-lg-9 col-xl-9">
                                            <div>
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h5><%= element.title %></h5>
                                                        <p class="mb-3 text-muted text-uppercase small">Brand - <%= element.brand %></p>
                                                        <p class="mb-2 text-muted text-uppercase small">Category: <%= element.category %></p>
                                                    </div>
                                                    <div>
                                                        <div class="mb-0 w-100">
                                                            <button
                                                                
                                                                class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input class="quantity text-center" min="0" max="100" name="quantity"
                                                                value="<%= element.quantity %>" type="number" inputmode="numeric" readonly>
                                                            <button
                                                                
                                                                class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <a href="/cart/remove?id=<%= element.id %>" type="button"
                                                            class="small text-uppercase mr-3"><i
                                                                class="fas fa-trash-alt mr-1"></i> Remove item </a>
                                                    </div>
                                                    <p class="mb-0"><span><strong id="summary">$<%= element.price %></strong></span></p
                                                        class="mb-0">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
   
                                    <hr class="mb-4">
                                <% }) %>
                             

                            <% } %>
                        </div>
                    </div>
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-4  rounded">
                    <!-- Card -->
                    <div class="mb-3">
                        <div class="pt-4">
                            <% if (CartItems !== null && CartItems.lenght !== 0) { %>
                            <h5 class="mb-3">Order summary</h5>
                            <ul class="list-group list-group-flush">
                                
                                <% let total = 0 %>
                                <% CartItems.forEach(element => { %>
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-2">
                                    <span><%= element.title %></span>
                                    <span><%= element.quantity %></span>
                                    <span><%= element.price * element.quantity %></span>
                                </li>
                                <% total = total+ (element.price * element.quantity) %>
                                <% }) %>
                                
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-top px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong><%= total %></strong></span>
                                </li>
                                    
                            </ul>
                            
                            <a href="/cart/checkout" class="btn btn-primary btn-block">Go to Checkout</a>
                            
                            <% } else {%>
                                <a href="/product" class="btn btn-primary btn-block">Explore Items</a>                            
                            <% } %>
                        </div>
                    </div>
                    <!-- Card -->
                </div>
                <!--Grid column-->
            </div>
        </div>
    </section>

    <!-- ==============cart ends here============== -->

    <!-- ==============footer starts here============== -->
